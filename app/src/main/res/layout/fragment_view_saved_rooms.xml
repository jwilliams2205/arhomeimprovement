<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view_saved_rooms"
    android:background="#7F97B3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="633dp"
            android:layout_height="69dp"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            android:textColor="#FFFFFFFF"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button"
            android:src="?attr/homeAsUpIndicator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="92dp"
            android:layout_height="72dp"
            android:contentDescription="@string/small_logo"
            android:src="@drawable/blackwhitelogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/view_furniture_in_saved_room"
            android:layout_width="333dp"
            android:layout_height="42dp"
            android:background="@drawable/ripple"
            android:text="@string/view_saved_furniture_string"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85" />

        <Button
            android:id="@+id/delete_saved_room_button"
            android:layout_width="333dp"
            android:layout_height="42dp"
            android:background="@drawable/ripple"
            android:text="@string/delete_saved_room"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.931" />

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="446dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.396">

            <TextView
                android:id="@+id/couch1savedroom"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:text="@string/couch"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/couch2savedroom"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:text="@string/couch"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/couch3savedroom"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:text="@string/couch"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/couch4savedroom"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:text="@string/couch"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp"
                android:visibility="invisible"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>